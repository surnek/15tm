
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222225"
    android:orientation="vertical">

   
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_margin="20dp"
            android:padding="@dimen/spacing_large">
           
        
            <TextView
                android:layout_marginTop="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/Lbl_Log_In"
                android:textColor="@color/white"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textSize="30sp"/>
             <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="@string/Lbl_Log_In_2"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:textColor="@color/activated_color"
                 android:textSize="12sp"
                android:textStyle="bold" 
            />
            
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edt_draw"
                android:theme="@style/TextLabel"
                android:layout_marginTop="10dp">
                <EditText
                android:background="@android:color/transparent"
                    android:foregroundTint="@color/black"
                    android:id="@+id/edt_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:hint="@string/Lbl_Username"
                    android:inputType="textEmailAddress"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="#e6e6e6"
                    android:theme="@style/DefaultEditText" />
            </android.support.design.widget.TextInputLayout>
     
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                  android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/edt_draw"
                android:theme="@style/TextLabel">
                <EditText
                android:background="@android:color/transparent"
                    android:foregroundTint="@color/black"
                    android:paddingLeft="10dp"
                    android:id="@+id/edt_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="-4dp"
                    android:layout_marginEnd="-4dp"
                    android:hint="@string/Lbl_Password"
                    android:inputType="textPassword"
                    android:maxLength="50"
                    
                    android:maxLines="1"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:textColor="#e6e6e6"
                    android:theme="@style/DefaultEditText" />
            </android.support.design.widget.TextInputLayout>
          
            <RelativeLayout
            android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:weightSum="100"
                android:orientation="horizontal">
              
                 <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:textStyle="bold"
                    android:tint="@color/accent"
                    app:backgroundTint="@color/lightPrimary"
                    app:fabSize="normal"
			        app:elevation="3dp"
                    app:rippleColor="@color/accent"
                    android:src="@xml/ic_arrow_right" />
                  <TextView
                    android:layout_alignParentRight="true"
                    android:id="@+id/txt_forgot_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                    android:layout_weight="50"
                    android:layout_marginTop="5dp"
                    android:text="@string/Lbl_Forget_password"
                    android:gravity="center"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="#e6e6e6" />
                     <TextView
                android:layout_below="@id/txt_forgot_pass"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="17sp"
                  android:text=".............................."
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Subhead"
                    android:textColor="#e6e6e6" />
            </RelativeLayout>
         
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
              
                <RelativeLayout
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal">
                    <ProgressBar
                        android:id="@+id/progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:theme="@style/ProgressBar.White"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="vertical">
                <com.facebook.login.widget.LoginButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/fblogin_button"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="5dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:layout_gravity="center_horizontal" />
                <com.google.android.gms.common.SignInButton
                    android:id="@+id/Googlelogin_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center_horizontal" />
                <Button
                  android:id="@+id/WoWonderLogin_button"
                  android:layout_width="match_parent"
                  android:layout_height="40dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginStart="6dp"
                  android:layout_marginEnd="6dp"
                  android:textSize="16sp"
                  android:text="@string/Lbl_LoginWith" 
                  android:textColor="@color/WoWonderLogin_color" 
                  android:drawableStart="@mipmap/iconwowonder" 
                  android:paddingStart="10dp"
                  android:clickable="true" 
                  android:textAllCaps="false"
                  android:visibility="gone"
                  android:gravity="center"
                  android:background="@drawable/ThirdpartyRoundText"
                  android:layout_gravity="center_horizontal" /> 
            </LinearLayout>
            

            

        </LinearLayout>
    <LinearLayout
        android:id="@+id/abc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
               
        android:layout_marginBottom="24dp"
        android:layout_centerHorizontal="true"
               
           >

        <TextView
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:id="@+id/txt_donthava"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="@string/Lbl_DontHaveAnAccount"
                     android:textColor="@color/activated_color" />
              <TextView
          
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:id="@+id/txt_Regsiter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:autoLink="web"
                    android:text="@string/Lbl_Register"
                    android:textStyle="bold"
                   android:textColor="@color/white" />
       
        </LinearLayout>>
       
</RelativeLayout>